mixin sCheckout(data)
	// start sCheckout
	+b.SECTION.sCheckout.section#sCheckout&attributes(attributes)
		+e.container.container
			+b.section-title.text-center
				h1 Оформление заказа
			+e.row
				+e.steps-col
					+checkoutStep('Товары в заказе')(class="finished")
						+b.goods
							+checkoutStep1Item('1 шт', 2, 'YADOMA', 'Хлебница', 'Bread', '19 000 RUB')
							+checkoutStep1Item('20 шт', 1, 'DEGRENNE', 'Круглая тарелка для презентации блюд, 30 см', 'BAHIA', '73 400 RUB')
							+checkoutStep1Item('1 шт', 3, 'Gourmet', 'Мини-боул Gourmet', 'ROC', '2 200 RUB', '2 800 RUB')
					+checkoutStep('Расчёт доставки')
						+b.delivery-results
							+e.txt
								span
									| Населённый пункт:
									|
								span Санкт-Петербург, Россия
							+e.txt
								span
									| Индекс:
									|
								span 187015
					+checkoutStep('Доставка')
						+b.finished-step-cont
							span Доставка курьером
					+checkoutStep('Оплата')
						+b.finished-step-cont
							span Картой при получении
					+checkoutStep('Покупатель')
						//-5
						+b.customer
							+form-wrap
								+e.inputs-box
									+input('ФИО', 'text')
									+input('Телефон', 'tel')
									+input('Почта', 'email')
									+input('Адрес доставки', 'textarea', undefined, 'address')
									+input('Комментарий к заказу', 'textarea', undefined, 'comment')
									+e.btn-cont
										+e.BUTTON.back-btn(type="button") Назад
								+e.LABEL.policy
									input(type="checkbox" checked='checked')
									span.check-box-square
										+icon('checkout-check')
									span.txt
										span
											| Я даю своё согласие на
											|
										a(href="#") обработку персональных данных
								+e.BUTTON.send-btn(type='submit')
									+icon('cart')
									span Оформить заказ
				+e.info-col
					+e.i-price-box
						+e.i-price-txt Товаров на
						+e.i-price-digits
							+e.i-price-cur 94 600 RUB
							+e.i-price-old 95 200 RUB
					+e.i-delivery
						span Доставка
						span бесплатно
					+e.i-total
						span Итого
						span 94 600 RUB
	// end sCheckout

