mixin stepContenCheckboxed()
	+b.step-chb
		+e.cont
			block
		+e.lower-btns
			+e.A.btn(href='#') Назад
			+e.A.btn(href='#') Далее

mixin stepContenCheckboxedItem(name, txt)
	+e.LABEL.item
		input(type='radio' name=name)&attributes(attributes)
		span.radio-box
			+icon('checkout-check')
		span.txt=txt

mixin checkoutStep(stepName)
	+e.step
		+e.header&attributes(attributes)
			+e.step-name
				span=stepName
			+e.A.change-link(href='#') изменить
		+e.content.active
			block

mixin checkoutStep1Item(amount,imgNum, name, descr1, descr2, price, oldPrice=false)
	+e.item
		+e.img-box
			+e.A.img(href="#")
				img(loading="lazy" src=`img/@2x/new-slide-${imgNum}.jpg` alt="")
		+e.data
			+e.name-box
				+e.name=name
				+e.descr
					span=descr1
					span=descr2
				+e.article
					span Артикул:
					span 167456
			+e.amount-box=amount
			+e.result-box
				+e.result-pr=price
				if oldPrice
					+e.old-price=oldPrice