mixin catalogItem(i,basket,sale)
	+b.catalogItem&attributes(attributes)
		+e.imgWrap(href="#")
			+pic(`catalogItem-${i}`,'','')
			if sale
				+e.sale= sale
		+e.body
			block
			if basket
				+e.btnWrap
					+e.minus(type="submit")
					+e.btn
						+icon('basket')
						span Добавлено 1
					+e.plus(type="submit")
			else
				+e.btnWrap(type="submit")
					+icon('basket')
					span В корзину
