mixin catalogItem(i,basket,sale)
	+b.catalogItem&attributes(attributes)
		+e.imgWrap(href="#")
			+pic(`catalogItem-${i}`,'','')
			if sale
				+e.sale= sale
		+e.body
			block
			if basket
				+e.btnWrap
					+e.minus(type="submit")
					+e.btn
						+icon('basket')
						+e.added 
							.d-none.d-sm-inline Добавлено 
							|1
					+e.plus(type="submit")
			else
				+e.btnWrap--sm(type="submit")
					+e.SPAN.btn
						+icon('basket')
						span В корзину
