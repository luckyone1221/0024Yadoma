									+e.price 16 000 RUB
						.col-6.col-md-4.col-lg-6.col-xl-4
							+catalogItem('3.png','basket')
								+b.tagsBlock
									a(href="#") Хлебная зона
								+e.title(href="#") Emma
								+e.name Хлебница /
									span Emma Danish
								+e.priceWrap
									+e.price 16 000 RUB
						.col-6.col-md-4.col-lg-6.col-xl-4
