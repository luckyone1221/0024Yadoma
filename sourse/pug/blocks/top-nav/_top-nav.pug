mixin top-nav() 
	// start top-nav
	+b.top-nav.block-with-lazy
		+e.top-strip
			+e.top-container.container
				+e.menu
					+mnu()
				+e.A.tell(href="tel:+79213412020") +7 (921) 341 20 20
		+e.logo-strip
			+e.logo-container.container
				+e.A.logo(href="/")
					img(src='img/svg/logo.svg' alt="")
				+e.search-cart
					+e.A.search-btn(href='#')
						+icon('search')
					+e.A.cart-btn(href='#')
						+icon('cart')
						span (0)
		+e.pop-up-menu
			+e.pop-up-cont.container.pop-up-cont-js
				ul
					+popUpItem('Новинки')
						| 1
					+popUpItem('Кухня')
						+b.part-5
							+e.container.container
								+e.row.row
									+e.img-col.col-auto
										+e.A.img(href='#')
											img(loading="lazy" src='img/@2x/kitchen-img.jpg' alt="")
										+e.img-descr
											+e.i-d-txt Свежие природные тона
											+e.A.watch-link(href="#") Смотреть
									+e.content-col.col
										+e.content-row.row
											+contentRowItem('Актуально', 'Новинки', 'Природные оттенки', 'Бренды')
											+contentRowItem('Хранение', 'Хлебницы', 'Ёмкости для хранения', 'Ёмкости для хранения', 'Папки для рецептов')
											+contentRowItem('Доски', 'Хлебные доски')
											+contentRowItem('Ножи', 'Хлебные ножи')
					+popUpItem('Столовая')
					+popUpItem('Декор')
					+popUpItem('Система YaDoma')
						+b.yadoma-c.d-none
							+e.container
								+e.H3.title Кухня
								+e.top-items-cont
									+e.top-items
										+yadomaCTopItem()
										+yadomaCTopItem()
										+yadomaCTopItem()
										+yadomaCTopItem()
										+yadomaCTopItem()
										+yadomaCTopItem()
										+yadomaCTopItem()
