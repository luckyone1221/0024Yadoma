mixin contentRowItem(title,...items)
	+e.sub-col.col-lg-4.col-xl-3
		+e.title=title
		+e.UL.list
			each item in items
				li
					a(href="#")=item

mixin botItem(imgNum, title, txt)
	+e.bot-col.col-sm-6.col-md-4.col-xl-3
		+e.bot-item
			+e.bot-img(href="#")
				+e.A.img-inner(href="#")
					img(loading="lazy" src=`img/@2x/bot-item-${imgNum}.jpg` alt="")
			+e.A.i-title(href="#")=title
			+e.A.bot-txt(href="#")
				block

mixin yadomaCTopItem()
	+e.item
		+e.A.img-inner(href="#")
			img(loading="lazy" src="img/@2x/bread-img.jpg" alt='')
		+e.i-title Хлебная зона
		+e.UL.list
			li
				a(href="#") Хлебницы
			li
				a(href="#") Хлебные доски
			li
				a(href="#") Хлебные ножи
			li
				a(href="#") Хлебные корзины
			li
				a(href="#") Салфетки

mixin popUpItem(titleTxt)
	li
		a(href="#")=titleTxt
		+e.inner-pop.inner-popup-js
			block